{
    "manifest_version": 2,
    "name": "Theatre",
    "version": "1.0",
    "description": "To let chrome become a theatre",
    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "background",
        "webNavigation",
        "notifications",
        "http://localhost/"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [
        "views/*.html",
        "views/*.css",
        "imgs/*"
    ]
}
